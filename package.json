{
  "name": "react-transformer",
  "publisher": "jamespan",
  "displayName": "React Transformer",
  "description": "Supports various quick operations for JSX structures, including wrapping with new tags, swapping with sibling nodes, creating forwardRef, removing wrapper tags, batch removing content, creating & expressions, conditional expressions, etc. Aims to improve React development efficiency and simplify common component structure adjustments and refactoring workflows.",
  "version": "1.0.0",
  "icon": "assets/icon.png",
  "author": {
    "name": "James Pan",
    "email": "panjiang@gmail.com",
    "wechat": "panjiang"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-transformer/react-transformer.git"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [],
    "submenus": [
      {
        "id": "react-transformer.menu",
        "label": "React Transformer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "react-transformer.menu",
          "group": "react-transformer"
        }
      ],
      "react-transformer.menu": [
        {
          "command": "react-transformer.warp_it"
        },
        {
          "command": "react-transformer.swap_with_next_sibling"
        },
        {
          "command": "react-transformer.create_forward"
        },
        {
          "command": "react-transformer.remove_wrapper"
        },
        {
          "command": "react-transformer.remove_all"
        },
        {
          "command": "react-transformer.create_ampersand_expression"
        },
        {
          "command": "react-transformer.create_conditional_expression"
        },
        {
          "command": "react-transformer.remove_children"
        }
      ]
    },
    "commands": [
      {
        "command": "react-transformer.warp_it",
        "title": "Wrap with new tag (default: Fragment)"
      },
      {
        "command": "react-transformer.swap_with_next_sibling",
        "title": "Swap with next sibling node"
      },
      {
        "command": "react-transformer.create_forward",
        "title": "Create forward ref"
      },
      {
        "command": "react-transformer.remove_wrapper",
        "title": "Remove wrapper tag"
      },
      {
        "command": "react-transformer.remove_all",
        "title": "Remove all content"
      },
      {
        "command": "react-transformer.create_ampersand_expression",
        "title": "Create & expression"
      },
      {
        "command": "react-transformer.create_conditional_expression",
        "title": "Create conditional expression"
      },
      {
        "command": "react-transformer.remove_children",
        "title": "Remove all child nodes"
      },
      {
        "command": "react-transformer.showRefactorMenu",
        "title": "Show refactor menu"
      }
    ]
  },
  "scripts": {
    "package": "tsc --noEmit && node esbuild.js --production && vsce package",
    "publish": "npm run package && vsce publish",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run build && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@babel/generator": "^7.25.0",
    "@babel/parser": "^7.25.0",
    "@babel/template": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "@babel/types": "^7.25.0",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/lodash": "^4.17.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "lodash": "^4.17.21"
  }
}
